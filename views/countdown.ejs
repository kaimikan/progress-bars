  </head>
  <body>
    <div class="form-container">
      <form id="timer-form">
        <div class="title" id="toggle-timer-form">New Timer</div>
        <div id="toggle-form-content" visible="false">
          <label for="title">Title:</label>
          <input type="text" id="timer-title" name="text" required />

          <label for="duration-hours">Hours:</label>
          <input
            type="number"
            id="duration-hours"
            name="duration-hours"
            min="0"
            value="0"
            required
          />

          <label for="duration-minutes">Minutes:</label>
          <input
            type="number"
            id="duration-minutes"
            name="duration-minutes"
            min="0"
            value="0"
            required
          />

          <label for="duration-seconds">Seconds:</label>
          <input
            type="number"
            id="duration-seconds"
            name="duration-seconds"
            min="0"
            value="0"
            required
          />

          <button type="submit">Add Timer</button>
        </div>
      </form>
    </div>

    <div class="timers-container" id="timers-container">
      <div class="timer-container" id="timer1">
        <div class="title">Coding</div>
        <svg class="progress-ring" width="120" height="120">
          <circle
            class="progress-ring__circle"
            stroke="blue"
            stroke-width="4"
            fill="transparent"
            r="54"
            cx="60"
            cy="60"
          />
        </svg>
        <div class="time-display">00:30</div>
        <div class="controls">
          <button class="start-btn">Start</button>
          <button class="pause-btn">Pause</button>
          <button class="reset-btn">Reset</button>
        </div>
